    bool "2.9\" 296x128 - GxEPD2_290_BS"

# 3.7" - 4.2" Displays
config GXEPD2_371
    bool "3.7\" 416x240 - GxEPD2_371 (GDEW0371W7)"
config GXEPD2_420
    bool "4.2\" 400x300 - GxEPD2_420 (GDEW042T2)"
config GXEPD2_420_M01
    bool "4.2\" 400x300 - GxEPD2_420_M01"
config GXEPD2_420_M02
    bool "4.2\" 400x300 - GxEPD2_420_M02"
config GXEPD2_437
    bool "4.37\" 512x368 - GxEPD2_437"

# 5.65" - 5.83" Displays
config GXEPD2_565
    bool "5.65\" 600x448 - GxEPD2_565 (GDEW0565T15)"
config GXEPD2_583
    bool "5.83\" 648x480 - GxEPD2_583 (GDEW0583T7)"
config GXEPD2_583_T8
    bool "5.83\" 648x480 - GxEPD2_583_T8 (GDEW0583T8)"

# 7.5" Displays
config GXEPD2_750
    bool "7.5\" 800x480 - GxEPD2_750 (GDEW075T8)"
