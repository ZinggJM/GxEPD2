# 11.6" Display
config GXEPD2_1160_T91
    bool "11.6\" 1304x984 - GxEPD2_1160_T91"

# 12.48" Display
config GXEPD2_1248
    bool "12.48\" 1304x984 - GxEPD2_1248"

endchoice

#
# STEP 2: BOARD CONFIGURATION (Optional - Auto-Detected)
#

choice GXEPD2_BOARD
    prompt "Development Board"
    default GXEPD2_BOARD_AUTO
    help
      Select your board or use auto-detection.

config GXEPD2_BOARD_AUTO
    bool "Auto-detect (nRF52840/5340/54L15)"
config GXEPD2_BOARD_NRF52840
    bool "nRF52840 DK"
config GXEPD2_BOARD_NRF5340
    bool "nRF5340 DK"
config GXEPD2_BOARD_NRF54L15
    bool "nRF54L15 DK"
config GXEPD2_BOARD_CUSTOM
    bool "Custom (use device tree overlay)"
endchoice

#
# STEP 3: OPTIONS
#

config GXEPD2_AUTO_INIT
    bool "Auto-initialize at boot"
    default y
    help
      Display is automatically initialized and ready to use in main().
      Call gxepd2_get_display() to get the instance.

config GXEPD2_SPI_FREQUENCY
    int "SPI frequency (Hz)"
    default 4000000
    range 1000000 8000000
    help
      SPI clock frequency. Most displays work at 4MHz.

config GXEPD2_INIT_PRIORITY
    int "Init priority"
    default 90
    help
      Must be higher than SPI/GPIO drivers (50-60).

endif # GXEPD2
