# GxEPD2 Kconfig - Just Select Your Display!
# All 37 display drivers available - uncomment ONE line

menuconfig GXEPD2
    bool "GxEPD2 E-Paper Display Library"
    depends on SPI && GPIO
    select CPP
    help
      GxEPD2 library for e-paper displays on Zephyr RTOS.
      Simply select your display model below and build!

if GXEPD2

module = GXEPD2
module-str = gxepd2
source "subsys/logging/Kconfig.template.log_config"

#
# STEP 1: SELECT YOUR DISPLAY (Uncomment ONE)
# All original drivers from src/epd/ are available!
#

choice GXEPD2_DISPLAY
    prompt "Select Your Display Model"
    help
      Choose your e-paper display model. The driver will be automatically
      compiled and initialized. Just select and build!

# 1.02" - 1.54" Displays
config GXEPD2_102
    bool "1.02\" 128x80 - GxEPD2_102"
config GXEPD2_150_BN
    bool "1.50\" 200x200 - GxEPD2_150_BN"
config GXEPD2_154
    bool "1.54\" 200x200 - GxEPD2_154 (GDEP015OC1)"
config GXEPD2_154_D67
    bool "1.54\" 200x200 - GxEPD2_154_D67 (GDEH0154D67)"
config GXEPD2_154_M09
    bool "1.54\" 200x200 - GxEPD2_154_M09"
config GXEPD2_154_M10
    bool "1.54\" 200x200 - GxEPD2_154_M10"
config GXEPD2_154_T8
    bool "1.54\" 200x200 - GxEPD2_154_T8 (GDEW0154T8)"

# 2.13" Displays
config GXEPD2_213
    bool "2.13\" 250x122 - GxEPD2_213 (GDE0213B1)"
config GXEPD2_213_B72
    bool "2.13\" 250x122 - GxEPD2_213_B72 (GDEH0213B72)"
config GXEPD2_213_B73
    bool "2.13\" 250x122 - GxEPD2_213_B73 (GDEH0213B73)"
config GXEPD2_213_B74
    bool "2.13\" 250x122 - GxEPD2_213_B74 (GDEH0213B74)"
config GXEPD2_213_BN
    bool "2.13\" 250x122 - GxEPD2_213_BN"
config GXEPD2_213_M21
    bool "2.13\" 250x122 - GxEPD2_213_M21 (GDEW0213M21)"
config GXEPD2_213_T5D
    bool "2.13\" 250x122 - GxEPD2_213_T5D (GDEW0213T5D)"
config GXEPD2_213_flex
    bool "2.13\" 250x122 Flexible - GxEPD2_213_flex"

# 2.6" - 2.9" Displays
config GXEPD2_260
    bool "2.6\" 296x152 - GxEPD2_260 (GDEW026T0)"
config GXEPD2_260_M01
    bool "2.6\" 296x152 - GxEPD2_260_M01 (GDEW026M01)"
config GXEPD2_266_BN
    bool "2.66\" 296x152 - GxEPD2_266_BN"
config GXEPD2_270
    bool "2.7\" 264x176 - GxEPD2_270 (GDEW027W3)"
config GXEPD2_290
    bool "2.9\" 296x128 - GxEPD2_290 (GDEH029A1)"
config GXEPD2_290_T5
    bool "2.9\" 296x128 - GxEPD2_290_T5 (GDEW029T5)"
config GXEPD2_290_T5D
    bool "2.9\" 296x128 - GxEPD2_290_T5D (GDEW029T5D)"
config GXEPD2_290_T94
    bool "2.9\" 296x128 - GxEPD2_290_T94"
config GXEPD2_290_T94_V2
    bool "2.9\" 296x128 - GxEPD2_290_T94_V2"
config GXEPD2_290_M06
    bool "2.9\" 296x128 - GxEPD2_290_M06 (GDEW029M06)"
